<header>
    <nav>
        <div>
            <ul class="ulLinkContainer">
                <li><a href="/home">Home</a></li>
                <li><a href="/realtimeproducts">New product</a></li>
                <li><a href="/profile">Perfil</a></li>
            </ul>
        </div>
    </nav>
</header>
<main>
    <div id="usersContiainer">
        <div class="divUsers">
                <form id="formGet" class="formUsers">
                    <div>
                        <label for="input-get-user">Email usuario</label>
                        <input type="text" placeholder="ingresar id usuario" name="email" id="input-get-user">
                    </div>
                    <div>
                        <input type="submit" value="Obtener un usuarios" class="usersInputBtn">
                    </div>
                </form>
            <div id="divGetUser">
            </div>
        </div>
        <div class="divUsers">
            <form id="formUpdateRol" class="formUsers">
                <div>
                    <label for="input-update-rol-id">Id usuario</label>
                    <input type="text" placeholder="ingresar id usuario" name="id" id="input-update-rol-id">
                </div>
                <div>
                    <label for="input-update-rol">rol usuario</label>
                    <input type="text" placeholder="ingresar el nuevo rol del usuario" name="rol" id="input-update-rol">
                </div>
                <div>
                    <input type="submit" value="Modificar el rol de un usuario" class="usersInputBtn">
                </div>
            </form>
        </div>
        <div class="divUsers">
            <form id="formDeleteOneUser" class="formUsers">
                <div>
                    <label for="input-delete-user">Id usuario</label>
                    <input type="text" placeholder="ingresar id usuario" name="inputDeleteUser" id="input-delete-user">
                </div>
                <div>
                    <input type="submit" value="Eliminar un usuario" class="usersInputBtn">
                </div>
            </form>
        </div>
        <div class="divUsers">
            <form id="formDeleteInactive" class="formUsers">
                <div>
                    <label>Eliminar usuarios inactivos</label>
                    <input type="submit" value="Eliminar usuarios inactivos" class="usersInputBtn">
                </div>
            </form>
        </div>
        {{#each users}}
            <div class="users">
                <ul>
                    <li>Nombre : {{this.name}}</li>
                    <li>Email : {{this.email}}</li>
                    <li>Rol : {{this.rol}}</li>
                </ul>
            </div>
        {{/each}}
    </div>
</main>
<script src="/js/users.js"></script>
<link rel="stylesheet" href="/css/users.css">