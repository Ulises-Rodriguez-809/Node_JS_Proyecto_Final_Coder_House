    <h1>Lista de productos comprados, productos sin stock e informacion de tickets de compra</h1>
    <div id="cartContainer">
        <div id="clearCartContainer">
            <div>
                <button type="button" id="clearCart">Vacias carrito</button>
            </div>
        </div>
        <div id="stockContainer">
            <h2>Productos comprados:</h2>
            <ul>
                {{#each products}}
                <li class="liProduct">
                    <div>
                        <span>id : {{this.id}}</span>
                    </div>
                    <div>
                        <span>cantidad comprada : {{this.quantity}}</span>
                    </div>
                    <div>
                        <span>titulo : {{this.title}}</span>
                    </div>
                    <div>
                        <span>descripcion : {{this.description}}</span>
                    </div>
                    <div>
                        <span>codigo : {{this.code}}</span>
                    </div>
                    <div>
                        <span>precio : {{this.price}}</span>
                    </div>
                    <div>
                        <span>status : {{this.status}}</span>
                    </div>
                    <div>
                        <span>categoria : {{this.category}}</span>
                    </div>
                    <div>
                        <span>miniaturas : {{this.thumbnails}}</span>
                    </div>
                    <div>
                        <button type="button" id={{this.id}} class="removeProduct">Remover producto</button>
                    </div>
                </li><br>
                {{/each}}
            </ul>
        </div>
        <div id="notStockContainer">
            <h3>Productos sin stock disponible</h3>
            <ul>
                {{#each notStock}}
                <li class={{this.id}} id="notStockLi">
                    <div>
                        <span>id : {{this.id}}</span>
                    </div>
                    <div>
                        <span>cantidad comprada : {{this.quantity}}</span>
                    </div>
                    <div>
                        <span>titulo : {{this.title}}</span>
                    </div>
                    <div>
                        <span>descripcion : {{this.description}}</span>
                    </div>
                    <div>
                        <span>codigo : {{this.code}}</span>
                    </div>
                    <div>
                        <span>precio : {{this.price}}</span>
                    </div>
                    <div>
                        <span>status : {{this.status}}</span>
                    </div>
                    <div>
                        <span>categoria : {{this.category}}</span>
                    </div>
                    <div>
                        <span>miniaturas : {{this.thumbnails}}</span><br>
                    </div>
                    <div>
                        <button type="button" id={{this.id}} class="removeProduct">Remover producto</button>
                    </div>
                </li><br>
                {{/each}}
            </ul>
        </div>
        <div id="ticketsContainer">
            <h3>Todos tus tickets de compra informacion:</h3>
            <ul id="ulTickets">
                {{#each auxTickets}}
                <li id="ticketLi">
                    <div>
                        <span>id : {{this.id}}</span>
                    </div>
                    <div>
                        <span> codigo de compra : {{this.code}}</span>
                    </div>
                    <div>
                        <span>Dia de la compra : {{this.purchase_datetime}}</span>
                    </div>
                    <div>
                        <span>Total : {{this.amount}}</span>
                    </div>
                    <div>
                        <span>Comprador : {{this.purchaser}}</span>
                    </div>
                </li>
                {{/each}}
            </ul>
            <button id="prev">prev</button>
            <button id="next">next</button>
        </div>
    </div>
</main>
